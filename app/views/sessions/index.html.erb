<div class="w3-margin">
	<h1>Welcome!</h1>
	<div class="logreg">
		<h3>Register</h3>
		<form class="w3-form" action="/users" method="post">
			<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
			<label class="w3-label">Name</label>
			<input class="w3-input" type="text" name="user[name]">
			<label class="w3-label">Alias</label>
			<input class="w3-input" type="text" name="user[alias]">
			<label class="w3-label">Email</label>
			<input class="w3-input" type="email" name="user[email]">
			<label class="w3-label">Password</label>
			<input class="w3-input" type="password" name="user[password]">
			<label class="w3-label">Password Confirmation</label>
			<input class="w3-input" type="password" name="user[password_confirmation]">
			<input class="w3-btn w3-hover-blue-grey w3-margin w3-right" type="submit" value="Register">
		</form>
	</div>

	<div class="logreg">
		<h3>Login</h3>
		<form class="w3-form" action="/login" method="post">
			<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
			<label class="w3-label">Email</label>
			<input class="w3-input" type="email" name="email">
			<label class="w3-label">Password</label>
			<input class="w3-input" type="password" name="password">
			<input class="w3-btn w3-hover-blue-grey w3-margin w3-right" type="submit" value="Login">
		</form>
	</div>
</div>